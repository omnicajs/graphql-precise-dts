{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@/": [ "src/*" ],
            "~tests/": [ "tests/*" ],
        },
        "types": [ "node", "rxjs" ],
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
    },
    "include": [
        "src",
        "tests",
    ]
}